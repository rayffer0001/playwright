pipeline {
    agent any

    tools {
        
        
        nodejs 'node18'
        
        xvfb 'Xvfb'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    
                    checkout scm
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    
                    sh 'npm install'
                }
            }
        }

        stage('Run Cypress tests') {
            steps {
                script {
                    
                    //xvfb('npx cypress run')
                    //xvfb('npx playwright test')
                    //sh 'npx playwright test'
                    sh npx playwright test --project=chromium
                }
            }
        }
    }

    // post {
